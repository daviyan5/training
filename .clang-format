# .clang-format
Language: Cpp
BasedOnStyle: Google
IndentWidth: 4
AccessModifierOffset: -4
ColumnLimit: 100

AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

IncludeBlocks: Regroup
IncludeCategories:
  # System/standard library headers
  - Regex:           '^<[^/]*>$'
    Priority:        1
  # Third-party library headers
  - Regex:           '^<Eigen/.*>'
    Priority:        2
  - Regex:           '^<opencv2/.*>'
    Priority:        3
  - Regex:           '^<spdlog/.*>'
    Priority:        4
  - Regex:           '^<yaml-cpp/.*>'
    Priority:        5
  # Project headers
  - Regex:           '^<slam/.*>'
    Priority:        6
